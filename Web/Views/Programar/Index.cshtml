                    @Html.DisplayFor(modelItem => item.Tarifa4.Descripcion) - $ @Html.DisplayFor(modelItem => item.Tarifa4.ListaPrecio.Precio)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Tarifa5.Descripcion) - $ @Html.DisplayFor(modelItem => item.Tarifa5.ListaPrecio.Precio)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Tarifa6.Descripcion) - $ @Html.DisplayFor(modelItem => item.Tarifa6.ListaPrecio.Precio)
            </td>
        
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
